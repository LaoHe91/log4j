<?xml version="1.0" encoding="UTF-8"?>
<configuration status="TRACE">
  <appenders>
    <File name="File" 
          fileName="target/AsyncLoggerConfigTest2.log" 
          bufferedIO="false" 
          immediateFlush="true" 
          append="true">
      <PatternLayout>
        <pattern>%d %p %c{1.} [%t] %X{aKey} %m %location %ex%n</pattern>
      </PatternLayout>
    </File>
  </appenders>
  
  <loggers>
    <asyncRoot level="info">
      <AppenderRef ref="File"/>
    </asyncRoot>
  </loggers>
</configuration>