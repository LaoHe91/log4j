<configuration>

  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>perftest.log</file>
    <append>false</append>
    <encoder>
      <Pattern>%d %p %c{1} [%t] %X{aKey} %m %ex%n</Pattern>
      <immediateFlush>false</immediateFlush>
    </encoder>
  </appender>

  <Root level="debug">
    <AppenderRef ref="FILE" />
  </Root>
</Configuration>